{% block layout %}
    <div class="row">
        {% set class = 'col-md-' ~ first.size|default(3) ~ (first.offset|default('') ? ' col-md-offset-' ~ first.offset : '') %}
        <div class="{{ class }}">
            {% block first %}
            {% endblock %}
        </div>
        {% set class = 'col-md-' ~ second.size|default(6) ~ (second.offset|default('') ? ' col-md-offset-' ~ second.offset : '') %}
        <div class="{{ class }}">
            {% block second %}
            {% endblock %}
        </div>
        {% set class = 'col-md-' ~ third.size|default(3) ~ (third.offset|default('') ? ' col-md-offset-' ~ third.offset : '') %}
        <div class="{{ class }}">
            {% block third %}
            {% endblock %}
        </div>
    </div>
{% endblock %}